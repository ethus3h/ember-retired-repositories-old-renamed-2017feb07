#!/bin/bash

CHECK="--check"

for arg in $*; do
	case $arg in
		--check | --no-check) CHECK=$arg
	esac
done

#check KDE4
if [ $CHECK = "--check" ]; then
	if [ -z `which kdeinit4` ]; then
		echo "ERROR: Can't find KDE4 !"
		exit 1
	fi
fi

#check for kdesudo (if not use kdesu)
if [ -z `which kdesudo` ]; then
	mv backintime-kde4-root.desktop.kdesudo backintime-kde4-root.desktop
else
	mv backintime-kde4-root.desktop.kdesu backintime-kde4-root.desktop
fi

cp Makefile.template Makefile

echo "All OK. Now run:"
echo "    make"
echo "    sudo make install"

